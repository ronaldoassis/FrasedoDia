<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#de7905"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texto_nova_frase_id"
        android:layout_width="351dp"
        android:layout_height="408dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/texto_nova_frase"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_nova_frase_id" />

    <Button
        android:id="@+id/btn_nova_frase_id"
        android:layout_width="356dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/btn_nova_frase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>